{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Bonobo",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#entities"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#storage"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.bonobo",
          "match": "//[^\\n]*"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.numeric.bonobo",
          "match": "\\b([0-9]+(\\.[0-9]+)?)b?\\b"
        }
      ]
    },
    "entities": {
      "patterns": [
        {
          "match": "([A-Za-z_][A-Za-z0-9_]*)::",
          "captures": {
            "1": {
              "name": "entity.name.class.bonobo"
            }
          }
        },
        {
          "name": "entity.name.class.bonobo",
          "match": "\\b([A-Z][A-Za-z0-9_]*)\\b"
        },
        {
          "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*\\(",
          "captures": {
            "1": {
              "name": "entity.name.function.bonobo"
            }
          }
        },
        {
          "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*=>",
          "captures": {
            "1": {
              "name": "entity.name.function.bonobo"
            }
          }
        },
        {
          "match": "\\bf\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*:",
          "captures": {
            "0": {
              "name": "keyword.control.bonobo"
            },
            "1": {
              "name": "entity.name.function.bonobo"
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.bonobo",
          "match": "\\b(lambda|hide|if|fn|for|print|ret|type|while)\\b"
        }
      ]
    },
    "storage": {
      "patterns": [
        {
          "name": "storage.variable.bonobo",
          "match": "\\b(const|final|var)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.bonobo",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.bonobo",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.bonobo",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.bonobo",
              "match": "\\\\."
            }
          ]
        }
      ]
    }
  },
  "scopeName": "source.bnb"
}