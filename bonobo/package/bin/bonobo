#!/usr/bin/env bash

# Find where we are.
DIRNAME="$(cd "$(dirname "$0")" ; pwd -P )"

# Copy *.dylib, *.so
cp "$DIRNAME/libbvm_dart.dylib" "`pwd`/libbvm_dart.dylib" 2>/dev/null
cp "$DIRNAME/libbvm_dart.so" "`pwd`/libbvm_dart.so" 2>/dev/null

# Run Bonobo
"$DIRNAME/../dart-sdk/bin/dart" "$DIRNAME/bonobo.dart.snapshot" "$@"
EXIT=$?

# Clean up
rm -f "`pwd`/libbvm_dart.dylib" "`pwd`/libbvm_dart.so"

exit $EXIT
